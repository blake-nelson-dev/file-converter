# Firebase Configuration
# Copy this file to .env and fill in your Firebase project values
# DO NOT commit .env to version control

# Firebase Web App Configuration
VITE_FIREBASE_API_KEY=your-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Environment Settings
VITE_USE_FIREBASE_EMULATORS=false  # Set to true for local development with emulators
VITE_ENVIRONMENT=development       # development | staging | production

# Feature Flags
VITE_ENABLE_ANONYMOUS_UPLOADS=true  # Allow anonymous file processing
VITE_MAX_FILE_SIZE_MB=10           # Maximum file size in megabytes
VITE_ENABLE_BATCH_UPLOADS=true     # Allow multiple file uploads

# Conversion Settings
VITE_SUPPORTED_INPUT_FORMATS=pdf,docx,jpg,png
VITE_SUPPORTED_OUTPUT_FORMATS=pdf,docx,jpg,png
VITE_CONVERSION_TIMEOUT_SECONDS=540  # 9 minutes

# Security Settings
VITE_ENABLE_RATE_LIMITING=true
VITE_MAX_CONVERSIONS_PER_HOUR=100
VITE_REQUIRE_EMAIL_VERIFICATION=false  # Set to true in production

# Storage Settings
VITE_TEMP_FILE_TTL_HOURS=1  # How long to keep temporary files
VITE_MAX_STORAGE_PER_USER_GB=5  # Maximum storage per user in GB

# Optional: Third-party Services (for future use)
# VITE_SENTRY_DSN=your-sentry-dsn-here
# VITE_ANALYTICS_ID=your-analytics-id-here
# VITE_CLOUDCONVERT_API_KEY=your-api-key-here  # For advanced conversions