{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "baseUrl": ".",
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
